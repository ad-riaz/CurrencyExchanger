CREATE TABLE IF NOT EXISTS Currencies (
    id 			INTEGER	
    			PRIMARY KEY 
    			UNIQUE 
    			NOT NULL,
    code		TEXT 
    			UNIQUE 
    			NOT NULL,
    fullname	TEXT 
    			NOT NULL,
    sign 		TEXT
);

