CREATE TABLE IF NOT EXISTS currencies‹ (
    id       INTEGER PRIMARY KEY
                     NOT NULL
                     UNIQUE,
    code     TEXT    UNIQUE
                     NOT NULL,
    fullname TEXT    NOT NULL,
    sign     TEXT
);

