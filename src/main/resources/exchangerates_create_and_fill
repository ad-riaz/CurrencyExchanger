CREATE TABLE IF NOT EXISTS ExchangeRates (
    id               INTEGER PRIMARY KEY
                             UNIQUE
                             NOT NULL,
    BaseCurrencyId   INTEGER REFERENCES currencies (id) 
                             NOT NULL,
    TargetCurrencyId INTEGER REFERENCES currencies (id) 
                             NOT NULL,
    Rate             NUMERIC NOT NULL
);



